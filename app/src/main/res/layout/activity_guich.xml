<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dichvu.GuichActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarch"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#036e6c"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:text="Từ:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="25dp" />

        <TextView
            android:layout_weight="3"
            android:id="@+id/taikhoanguitext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />
        <TextView
            android:layout_weight="1"
            android:text="zzz"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/textclock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editnhapcauhoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Nhập câu hỏi"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnlayanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lấy Ảnh" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Gửi ảnh hoặc video cho chúng tôi để có thêm thông tin"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>