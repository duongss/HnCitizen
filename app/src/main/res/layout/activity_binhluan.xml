<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Dichvu.BinhluanActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:textColor="#151515"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:text="Nội Dung Thông báo:"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:background="@drawable/vien"
            android:id="@+id/noidungtbtxt"
            android:textColor="#430e0e"
            android:text="aaaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:textColor="#3b914e"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Bình Luận"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp">
        <ListView
            android:id="@+id/listviewbl"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <EditText
            android:id="@+id/textbl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="4" />

        <ImageView
            android:src="@drawable/sendch"
            android:id="@+id/dangbinhluan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>


